<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:padding="10dp">

        <View
            android:id="@+id/wv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/blue"
            android:background="@drawable/ic_close" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="About US"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="normal|bold" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/stroke_lite"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">
        <View
            android:layout_width="280dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/about_us_img"/>
        <View
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/app_title"/>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:layout_gravity="center"
            android:progressTint="@color/primary"
            android:visibility="gone"
            />

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            tools:ignore="WebViewLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Version: TRC01-7711.534"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal|bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/black_lite"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>
    </ScrollView>


</LinearLayout>