<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_close"
        android:scaleType="fitXY"
        android:background="@color/black"
        app:tint="@color/white"
        app:shapeAppearanceOverlay="@style/CircularView"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bottom_menu_bg"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rb_changePlan"
                style="@style/CustomRadioButton"
                android:text="Changed my plan" />

            <RadioButton
                android:id="@+id/rb_wrongLocation"
                style="@style/CustomRadioButton"
                android:text="Selected Wrong location" />

            <RadioButton
                android:id="@+id/rb_priceHigh"
                style="@style/CustomRadioButton"
                android:text="Pricing High" />

            <RadioButton
                android:id="@+id/rb_location"
                style="@style/CustomRadioButton"
                android:text="Selected wrong location" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_border"
                android:backgroundTint="@color/gray"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_bg"
                android:backgroundTint="@color/primary"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:textSize="15sp"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
