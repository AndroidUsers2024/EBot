<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="vertical">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_close"
        android:scaleType="fitXY"
        android:background="@color/black"
        app:tint="@color/white"
        app:shapeAppearanceOverlay="@style/CircularView"
        android:gravity="center" />
    <LinearLayout
        android:id="@+id/header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bottom_menu_bg"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/tv_changePlane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:gravity="center|start"
                android:paddingStart="15dp"
                android:background="@drawable/edit_text_bg"
                android:backgroundTint="@color/stroke_lite"
                android:paddingEnd="5dp"
                android:padding="@dimen/_10sdp"
                android:text="Changed my plan"
                android:textColor="@color/primary_text"
                android:textSize="17sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/tv_wrongLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center|start"
                android:paddingStart="15dp"
                android:background="@drawable/edit_text_bg"
                android:backgroundTint="@color/stroke_lite"
                android:paddingEnd="5dp"
                android:padding="@dimen/_10sdp"
                android:text="Selected Wrong location"
                android:textColor="@color/primary_text"
                android:textSize="17sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/tv_priceHigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center|start"
                android:paddingStart="15dp"
                android:background="@drawable/edit_text_bg"
                android:backgroundTint="@color/stroke_lite"
                android:paddingEnd="5dp"
                android:padding="@dimen/_10sdp"
                android:text="Pricing High"
                android:textColor="@color/primary_text"
                android:textSize="17sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center|start"
                android:paddingStart="15dp"
                android:background="@drawable/edit_text_bg"
                android:backgroundTint="@color/stroke_lite"
                android:paddingEnd="5dp"
                android:padding="@dimen/_10sdp"
                android:text="Selected wrong location"
                android:textColor="@color/primary_text"
                android:textSize="17sp"
                android:textStyle="normal" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_border"
                    android:gravity="center"
                    android:backgroundTint="@color/gray"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>