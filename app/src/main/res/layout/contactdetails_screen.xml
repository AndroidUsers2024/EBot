<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <View
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/backarrow_ic"
                android:layout_marginTop="15dp"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="114dp"
                tools:layout_editor_absoluteY="50dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personal_de"
                android:layout_width="181dp"
                android:layout_height="31dp"
                android:text="Contact Details"
                android:lineSpacingExtra="2sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="8dp"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/create_an_a"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="Create an account to continue!"
                android:lineSpacingExtra="3sp"

                />

        </LinearLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:text="Mobile number"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black_lite"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <EditText
                    android:id="@+id/et_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="11dp"
                    android:layout_marginTop="5dp"
                    android:digits="0123456789+ "
                    android:inputType="number"
                    android:gravity="center|start"
                    android:hint="Enter mobile number"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:text="Email ID"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black_lite"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:visibility="visible"/>
                <EditText
                    android:id="@+id/et_emailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="11dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center|start"
                    android:hint="Enter email ID"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:text="Address"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black_lite"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:inputType="textMultiLine"
                    android:gravity="center|start"
                    android:hint="Enter your detailed address"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:text="Pin Code"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black_lite"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <EditText
                    android:id="@+id/et_pinCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="11dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center|start"
                    android:hint="Enter pin code"
                    android:maxLength="6"
                    android:digits="1234567890"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:text="City"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black_lite"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="11dp"
                    android:inputType="text"
                    android:maxLength="20"
                    android:layout_marginTop="5dp"
                    android:gravity="center|start"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:hint="Enter city"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:text="State"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black_lite"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <EditText
                    android:id="@+id/et_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="11dp"
                    android:hint="Enter State"
                    android:inputType="text"
                    android:maxLength="20"
                    android:layout_marginTop="5dp"
                    android:gravity="center|start"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:text="Country"
                    android:layout_marginTop="10dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/black_lite"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <EditText
                    android:id="@+id/et_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="11dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center|start"
                    android:hint="Enter country"
                    android:inputType="text"
                    android:maxLength="18"
                    android:background="@drawable/edit_text_bg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <Button
                    android:id="@+id/btn_Next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/button_bg"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:padding="10dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textStyle="normal|bold"/>
            </LinearLayout>
            </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</RelativeLayout>