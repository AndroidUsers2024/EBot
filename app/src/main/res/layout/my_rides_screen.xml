<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".actvities.MyRidesScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_above="@+id/btn_cancelRide"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/white"
            android:gravity="center|start"
            android:orientation="horizontal">

            <View
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/backarrow_ic"
                android:backgroundTint="@color/primary_text"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Back"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="15dp"
            android:id="@+id/card_header"
            app:cardBackgroundColor="@color/secondary_low"
            android:outlineSpotShadowColor="@color/secondary_low"
            android:padding="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending at Admin"
                    android:textColor="@color/yellow"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textStyle="normal|bold" />
                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="Booked at 21 Jan 2025 , 10:00 am"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tv_total_bill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="Total Amount : ₹ 198.00"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:padding="6dp"
                    android:text="Your ride will completed in 46 minutes"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ride Details"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:padding="8dp"
            android:textStyle="normal|bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="@color/white"
            android:background="@color/stroke_lite"
            android:padding="10dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/bikeImage"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/login_ebot" />
                    <TextView
                        android:id="@+id/tv_bike_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jet-Jitendra"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:padding="8dp"
                        android:textStyle="normal|bold" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:backgroundTint="@color/stroke_lite"
                    android:background="@drawable/line"/>
                <TextView
                    android:id="@+id/tv_bike_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ebot hub 1"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:textStyle="normal|bold" />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9-1-34/30D, Sri sai nilayam,\nBapunagar, Langer House, Hyderabad,\nTelangana-500008"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:textStyle="normal" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:backgroundTint="@color/stroke_lite"
                    android:background="@drawable/line"/>
                <TextView
                    android:id="@+id/tv_booking_date_time_below"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="21 Jan 2025 , 10 AM to 12 PM"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:padding="6dp"
                    android:text="Start at ₹99/hr"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <Button
        android:id="@+id/btn_cancelRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="@dimen/_25sdp"
        android:padding="10dp"

        android:text="Cancel Ride"
        android:textAllCaps="false"
        android:gravity="center"
        android:textStyle="normal|bold"/>

</RelativeLayout>